<%= render "shared/error", obj: @article%>

<div class="row">
	<div class="col-xs-12">
		<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |i| %>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= i.label :title %>
				</div>
				<div class="col-sm-8">
					<%= i.text_field :title, class: "form-control", placeholder: "Title of Article", autofocus: true %>
				</div>
			</div>

			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= i.label :description %>
				</div>
				<div class="col-sm-8">
					<%= i.text_area :description, class: "form-control", placeholder: "Body of Article", rows: 10%>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= i.submit class: "btn btn-primary" %>
				</div>
			</div>
		<% end %>

		<div class="col-xs-4 col-xs-offset-4">
			[ <%= link_to "Cancel Request and return to Article Listing", articles_path %> ]
		</div>
	</div>
</div>
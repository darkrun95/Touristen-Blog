<h2 class="center">Login</h2>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |i| %>
	<div class="form-group">
		<div class="control-label col-sm-2">
			<%= i.label :email %>
		</div>
		<div class="col-sm-8">
			<%= i.email_field :email, class: "form-control", placeholder: "Enter Email", autofocus: true %>
		</div>
	</div>

	<div class="form-group">
		<div class="control-label col-sm-2">
			<%= i.label :password %>
		</div>
		<div class="col-sm-8">
			<%= i.password_field :password, class: "form-control", placeholder: "Enter Password", autocomplete: "off" %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= i.submit "Log In", class: "btn btn-primary" %>
		</div>
	</div>
<% end %>

<div class="col-xs-4 col-xs-offset-4">
	[ <%= link_to "Cancel Request and return to Article Listing", articles_path %> ]
</div>